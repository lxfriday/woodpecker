{
  "name": "@lxfriday/woodpecker",
  "version": "2.5.0",
  "homepage": "https://github.com/lxfriday/woodpecker",
  "mail": "liu3248184446@outlook.com",
  "description": "Eslint、Prettier、Commitlint、Editorconfig、GitIgnore 自动注入工具",
  "main": "index.js",
  "scripts": {
    "start": "node ./bin/woodpecker.js",
    "lint": "eslint .",
    "test": "jest"
  },
  "bin": {
    "woodpecker": "./bin/woodpecker.js"
  },
  "keywords": [
    "自动格式化",
    "统一项目风格",
    "自动注入"
  ],
  "author": "lxfriday",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-angular": "^8.3.4",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.0.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.2",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.2",
    "prettier": "^2.0.5",
    "jest": "^24.9.0",
    "eslint-plugin-flowtype": "^5.0.3",
    "eslint-config-react-app": "^5.2.1",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "async": "^3.1.0",
    "chalk": "^2.4.2",
    "commander": "^3.0.0",
    "flyio": "^0.6.14",
    "inquirer": "^6.5.1",
    "shelljs": "^0.8.3"
  }
}
